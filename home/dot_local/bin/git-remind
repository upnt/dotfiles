#!/usr/bin/bash

if [ -z "$GHUX_ALIASES_PATH" ]; then
        echo 'Please set the "GHUX_ALIASES_PATH"'
        exit 1
fi

if [ ! -f "$GHUX_ALIASES_PATH" ]; then
        /usr/bin/touch "$GHUX_ALIASES_PATH"
fi

readarray -t ghux_list < <(awk -F, '{print $3}' "$GHUX_ALIASES_PATH")
readarray -t ghq_list < <(ghq list)

ghq_list=("$(ghq root)" "${ghq_list[@]}")

for repo in $ghux_list; do
        echo $repo
done

for repo in $ghq_list; do
        echo $repo
done
